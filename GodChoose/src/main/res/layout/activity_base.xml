<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_home_root"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <FrameLayout
            android:id="@+id/fl_home_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_home_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#393939">
            <FrameLayout
                android:id="@+id/fl_home_rightview"
                android:layout_width="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="45dp">
                <ImageView
                    android:id="@+id/iv_home_rightview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/topic_news" />
            </FrameLayout>


            <TextView
                android:visibility="invisible"
                android:gravity="center"
                android:textColor="@color/uucolor"
                android:textSize="16sp"
                android:id="@+id/tv_home_rightview"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="提交" />

            <FrameLayout
                android:id="@+id/fl_home_leftview"
                android:layout_width="45dp"
                android:layout_centerVertical="true"
                android:layout_height="45dp">
                <ImageView
                    android:id="@+id/iv_home_leftview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/back_scar" />
            </FrameLayout>



            <TextView
                android:id="@+id/tv_home_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="标题"
                android:singleLine="true"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:textColor="@color/white50"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:background="#ccc"
        android:layout_height="1px"/>

    <FrameLayout
        android:id="@+id/fl_home_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</LinearLayout>
